{% extends 'base.html.twig' %}

{% block title %}Modifier le compte{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(editRegisterForm) }}
    {{ form_row(editRegisterForm.email) }}
    {{ form_row(editRegisterForm.password ) }}
    <button type="submit" class="btn">Enregistrer</button>
    {{ form_end(editRegisterForm) }}

    <a href="{{ path('delete_profil', {'id' : app.user.id})}}">Supprimer mon profil</a><br>
{% endblock %}
