<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		{% block stylesheets %}
		
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		{% endblock %}

		{% block javascripts %}
			<script src="https://kit.fontawesome.com/81ab4e445e.js" crossorigin="anonymous"></script>
			<script src="js/script.js" defer></script>
		{% endblock %}
	</head>


  <header>
    <h2><a href="{{ path('app_home')}}" title="sport">COSPO</a></h2>
    <nav>
      <ul>
        <li>
          <a href="{{ path('app_home')}}" title="Accueil">Accueil</a>
        </li>
		 <li>
          <a href="#" title="Contact">Contact</a>
        </li>
		{% if app.user %}
		        <li>
          <a href="{{ path('app_profil', {'id': app.user.id }) }}" title="Profil">Profil</a>
        </li>
		<li>
          <a href="{{ path('app_logout')}}" title="Deconnexion"><div class="rouge"><i class="fa-solid fa-arrow-right-from-bracket"></i>
						</div></a>
        </li>
		{% else %}
        <li>
          <a href="{{ path('app_register')}}" title="Inscription">Inscription</a>
        </li>
		<li>
          <a href="{{ path('app_login')}}" title="Connexion">Connexion</a>
        </li>
		{% endif %}
      </ul>
    </nav>
  </header>


	    <body>
		    <div class="wrapper">{% block body %}{% endblock %}</div>
	    </body>
	</html>
