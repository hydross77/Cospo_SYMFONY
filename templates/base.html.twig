<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width">
		<title>
			{% block title %}Accueil{% endblock %}
		</title>
			<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Barlow">
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
			<link rel="shortcut icon" href="{{ asset('favicon/favicon.ico') }}">
			<link rel="icon" type="image/gif" href="{{ asset('favicon/animated_favicon1.gif') }}">
			{% block stylesheets %}{% endblock %}
	</head>

	<header>
		<nav>
			<h1><a href="{{ path('app_home')}}" title="COSPO">COSPO</a></h1>
				<!-- NAVBAR -->
				{% if app.user %}
					<div class="mynav">
						<ul>
							<li><a href="{{ path('app_home', {'id': app.user.id }) }}" title="Evenement" class="orange"><i class="fa-sharp fa-solid fa-house"></i></a>
							<li><a href="{{ path('app_profil', {'id': app.user.id }) }}" title="Profil" class="white"><i class="fa-solid fa-user"></i></a></li>
							<li><a href="{{ path('edit_register', {'id' : app.user.id})}}" title="Compte" class="white"><i class="fa-solid fa-gear"></i></a></li>
							<li><a href="{{ path('app_logout')}}" title="Deconnexion" class="red"><i class="fa-solid fa-arrow-right-from-bracket"></i></a></li>
						{% else %}
							<li><a href="{{ path('app_register')}}" title="Inscription" class="registerHover">Inscription</a></li>
							<li><a href="{{ path('app_login')}}" title="Connexion" class="loginHover">Connexion</a></li>
						{% endif %}
						</ul>
					</div>
				<!-- FIN NAVBAR -->

				<!-- MENU BURGER -->
					<div id="mySidenav" class="sidenav">
  					<a id="closeBtn" href="#" class="close">×</a>
  						<ul>
							<li><a href="{{ path('app_home', {'id': app.user.id }) }}" title="Accueil" class="orange">Accueil</i></a></li>
							<li><a href="{{ path('app_profil', {'id': app.user.id }) }}" title="Profil" class="white">Profil</a></li>
							<li><a href="{{ path('edit_register', {'id' : app.user.id})}}" title="Compte" class="white">Compte</a></li>
							<li><a href="{{ path('app_logout')}}" title="Deconnexion" class="red">Déconnexion</a></li>
  						</ul>
					</div>

					<a href="#" id="openBtn">
						<span class="burger-icon">
							<span></span>
							<span></span>
							<span></span>
						</span>
					</a>
				<!-- FIN MENU BURGER -->
		</nav>
  	</header>

	<body>
		<div class="video">{% block video %}{% endblock %}</div>
		<div class="wrapper">{% block body %}{% endblock %}</div>
		{% block javascripts %}
			<script src="https://kit.fontawesome.com/81ab4e445e.js" crossorigin="anonymous"></script>
			<script src="{{asset('js/script.js') }}"></script>
			<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
		{% endblock %}
	</body>

</html>