<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		{% block stylesheets %}{% endblock %}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('css/style.css') }}">
			<link rel="shortcut icon" href="{{ asset('favicon/favicon.ico') }}">
			<link rel="icon" type="image/gif" href="{{ asset('favicon/animated_favicon1.gif') }}">
	</head>

	<header>
		<nav>
			<h1><a href="{{ path('app_home')}}" title="COSPO">COSPO</a></h1>
				<ul>
				{% if app.user %}
					<li>
						<a href="{{ path('app_profil', {'id': app.user.id }) }}" title="Profil"><div class="orange"><i class="fa-solid fa-user"></i></div></a>
					</li>
					<li>
						<a href="{{ path('app_logout')}}" title="Deconnexion"><div class="rouge"><i class="fa-solid fa-arrow-right-from-bracket"></i></div></a>
					</li>
				{% else %}
					<li>
						<div class="registerHover">
							<a href="{{ path('app_register')}}" title="Inscription">Inscription</a>
						</div>
					</li>
					<li>
						<div class="loginHover">
							<a href="{{ path('app_login')}}" title="Connexion">Connexion</a>
						</li>
				{% endif %}
				</ul>
		</nav>
  	</header>

	<body>
		<div class="video">{% block video %}{% endblock %}</div>
		<div class="wrapper">{% block body %}{% endblock %}</div>
		{% block javascripts %}
			<script src="https://kit.fontawesome.com/81ab4e445e.js" crossorigin="anonymous"></script>
			<script src="{{asset('js/script.js') }}"></script>
		{% endblock %}
	</body>

</html>