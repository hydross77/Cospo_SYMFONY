{% extends 'base.html.twig' %}

{% block title %}Evenements{% endblock %}

{% block body %}
    <h1>Liste des évènements</h1>

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Titre de l'Evenement</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {% if user.events | length > 0 %}
                {% for event in user.events %}
                    <tr>
                        <th scope="row">{{ event.titleEvent }}</th>
                        <td><a href="{{ path('admin_delete_event', {'id' : event.id})}}"><div class="red"><i class="fa-solid fa-trash-can"></i></div></a></td>
                    </tr>
                {% endfor %}
                {% else %}
                    <p>Aucun évènement créé</p>
                {% endif %}
            </tbody>
        </table>


{% endblock %}